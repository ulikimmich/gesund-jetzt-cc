<div class="container" id="paddingBody">
  <div class="row">

      <h2>Login</h2>
    <br>
    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
      <%= f.input :email, :autofocus => true %>
      <%= f.input :password, :label => "Passwort" %>
      <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
      <%= f.button :submit, "Anmelden", :class => 'btn-primary' %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
<br>